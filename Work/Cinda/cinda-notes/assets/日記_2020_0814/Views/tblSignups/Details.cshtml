@model IEnumerable<Member.Models.DTO.Mix>

@{
    ViewBag.Title = "新達2020/9/25活動報名系統";
}

<h2>新達2020/9/25活動報名系統</h2>
@Html.ActionLink("新增", "Edit", new { tblSignupItem_ID = 0, cItemID = @ViewBag.cItemID })
<table class="table">
