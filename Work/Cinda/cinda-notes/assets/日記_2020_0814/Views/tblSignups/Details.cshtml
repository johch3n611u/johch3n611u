            <td>
                @Html.DisplayFor(modelItem => item.cName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cCreateDT)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { tblSignupItem_ID = item.tblSignupItem_ID, cItemID = item.cItemID }) |
                @Html.ActionLink("刪除", "Delete", new { tblSignupItem_ID = item.tblSignupItem_ID })
            </td>
        </tr>
    }

</table>

