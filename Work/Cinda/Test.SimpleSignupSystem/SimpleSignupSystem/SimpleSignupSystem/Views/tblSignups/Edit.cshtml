@model SimpleSignupSystem.Models.DTO.Mix
@{
    ViewBag.Title = "活動報名系統";
}

<h2>活動報名系統</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.tblSignupItem_ID)
        @Html.HiddenFor(model => model.cItemID)

        <div class="form-group">
            @Html.LabelFor(model => model.cName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cMobile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.cMobile == null)
                {
                    @Html.EditorFor(model => model.cMobile, new { htmlAttributes = new { @class = "form-control" } })
                }
                else 
                {
                    <input name="cMobile" value="@Model.cMobile" readonly class="form-control"/>
                }
                @Html.ValidationMessageFor(model => model.cMobile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cCreateDT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input value="@Html.DisplayFor(model => model.cCreateDT)" name="cCreateDT" class="form-control" readonly />
                @Html.ValidationMessageFor(model => model.cCreateDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="提交" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回首頁", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@Html.Raw(@ViewData["Message"])
