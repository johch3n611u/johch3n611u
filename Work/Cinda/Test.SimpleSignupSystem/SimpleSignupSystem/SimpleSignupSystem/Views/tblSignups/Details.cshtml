@model IEnumerable<SimpleSignupSystem.Models.DTO.Mix>

@{
    ViewBag.Title = "活動報名系統";
}

<h2>活動報名系統</h2>
@Html.ActionLink("新增", "Edit", new { tblSignupItem_ID = 0, cItemID = @ViewBag.cItemID })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cCreateDT)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cCreateDT)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { tblSignupItem_ID = item.tblSignupItem_ID, cItemID = item.cItemID }) |
                @*@Html.ActionLink("刪除", "Delete", new { tblSignupItem_ID = item.tblSignupItem_ID })*@
                <a onclick="CheckDelete(@item.tblSignupItem_ID,'@item.cName')" style="cursor: pointer">刪除</a>
            </td>
        </tr>
    }

</table>


<script>

    function CheckDelete(tblSignupItem_ID, cName) {
        if (confirm('確定要刪除 ' + cName + ' 嗎?')) {
            document.location.href = "/tblSignups/Delete?tblSignupItem_ID=" + tblSignupItem_ID;
        }
    }

</script>

