
@{
    ViewBag.Title = "TestBoostrap";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>TestBoostrap</h2>
@*6.3.2 建立Bootstrap View:TestBootStrap.cshtml,使用Bootstrap Grid System*@
<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-6 col1">col 1</div>
        <div class="col-md-3 col-sm-6 col2">col 2</div>
    </div>

    <div class="row">
        <div class="col-sm-6 col3">col 3</div>
        <div class="col-sm-6 col4">col 4</div>
    </div>
</div>
@*//6.3.3 在TestBootStrap.cshtml View中定義Section*@
@section CSS{
    <style>
        .col1 {
            background-color: yellow;
        }

        .col2 {
            background-color: lightblue;
        }

        .col3 {
            background-color: lightgreen;
        }

        .col4 {
            background-color: pink;
        }
    </style>
}